doctype html
html(lang='en')

    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='Cyberasma - Design & Development Services')
        meta(name='author', content='Hamza Asma Abdoulkarim')

        title Cyberasma - Design & Development

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        include includes/css.pug

    body.d-flex.flex-column.h-100

        main.flex-shrink-0

            // Navigation
            include includes/navbar.pug

            // Header
            header.py-5
                .container.px-5.pb-5
                    .row.gx-5.align-items-center
                        .col-xxl-5
                            // Header text content
                            .text-center.text-xxl-start
                                .badge.bg-gradient-primary-to-secondary.text-white.mb-4
                                    .text-uppercase Design &middot; Development
                                .fs-3.fw-light.text-muted Helping your brand thrive
                                h1.display-3.fw-bolder.mb-5
                                    span.text-gradient.d-inline Get online and grow fast
                                .d-grid.gap-3.d-sm-flex.justify-content-sm-center.justify-content-xxl-start.mb-3
                                    a.btn.btn-primary.btn-lg.px-5.py-3.me-sm-3.fs-6.fw-bolder(href='resume.html') Resume
                                    a.btn.btn-outline-dark.btn-lg.px-5.py-3.fs-6.fw-bolder(href='projects.html') Projects
                        .col-xxl-7
                            // Header profile picture
                            .d-flex.justify-content-center.mt-5.mt-xxl-0
                                .profile.bg-gradient-primary-to-secondary
                                    img.profile-img(src='assets/profile.png', alt='Profile Image of Hamza Asma')
                                    .dots-1
                                        include includes/svg-dots.pug
                                    .dots-2
                                        include includes/svg-dots.pug
                                    .dots-3
                                        include includes/svg-dots.pug
                                    .dots-4
                                        include includes/svg-dots.pug

            // About Section
            section.bg-light.py-5
                .container.px-5
                    .row.gx-5.justify-content-center
                        .col-xxl-8
                            .text-center.my-5
                                h2.display-5.fw-bolder
                                    span.text-gradient.d-inline About Cyberasma
                                p.lead.fw-light.mb-4 I’m Asma, a passionate developer and designer dedicated to helping brands achieve their digital growth.
                                p.text-muted With expertise in web and mobile development, I provide customized solutions tailored to each client’s needs, ensuring both innovation and functionality.
                                .d-flex.justify-content-center.fs-2.gap-4
                                    a.text-gradient(href="https://x.com/Asma_HH_")
                                        i.bi.bi-twitter
                                    a.text-gradient(href="https://www.linkedin.com/in/hamza-asma")
                                        i.bi.bi-linkedin
                                    a.text-gradient(href="https://github.com/cyber-asma")
                                        i.bi.bi-github

        // Footer
        include includes/footer.pug

        include includes/scripts.pug
